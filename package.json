{
  "name": "dpkit-project",
  "type": "module",
  "version": "0.0.0-development",
  "private": true,
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "pnpm -F !docs -F !site build",
    "bump": "ncu -ws -u",
    "clean": "npkill -D -x -y -nu && rm pnpm-lock.yaml",
    "compile": "pnpm -F dpkit compile",
    "coverage": "vitest --ui",
    "format": "biome check --write",
    "lint": "biome check",
    "install:ci": "pnpm install --ignore-scripts",
    "prepare": "husky",
    "publish": "pnpm -r publish --access public --ignore-scripts --no-git-checks",
    "set:version": "pnpm -r exec pnpm version --no-git-tag-version",
    "spec": "vitest run",
    "test": "pnpm lint && pnpm type && pnpm spec",
    "test:win": "pnpm spec",
    "type": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@semantic-release/exec": "7.1.0",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "execa": "9.6.0",
    "husky": "9.1.7",
    "npkill": "0.12.2",
    "npm-check-updates": "18.0.1",
    "semantic-release": "24.2.9",
    "tempy": "3.1.0",
    "type-fest": "^4.41.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
