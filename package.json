{
  "name": "#dpkit",
  "type": "module",
  "private": true,
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "pnpm -F '!docs' build",
    "bump": "ncu -ws -u",
    "ci:install": "pnpm install --ignore-scripts",
    "ci:publish": "pnpm -r publish --access public --ignore-scripts && changeset tag",
    "check": "pnpm run lint && pnpm run type",
    "clean": "rm pnpm-lock.yaml && find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' +",
    "coverage": "vitest --ui",
    "format": "biome check --write",
    "lint": "biome check",
    "prepare": "husky",
    "spec": "vitest run",
    "test": "pnpm check && pnpm run spec",
    "type": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.29.5",
    "@goreleaser/goreleaser": "2.11.2",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/ui": "3.1.4",
    "execa": "9.6.0",
    "husky": "9.1.7",
    "npm-check-updates": "18.0.1",
    "tempy": "3.1.0",
    "type-fest": "^4.41.0",
    "typescript": "5.9.2",
    "vitest": "3.1.4"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
